<div class="bg-white/10 backdrop-blur-xl rounded-3xl p-6 mb-4 border-2 border-white/20 hover:border-thomas-light transition-all duration-300">
  <div class="flex items-start justify-between mb-3">
    <div>
      <h3 class="font-black text-lg"><%= ticket.device&.name || ticket.vendor %> #<%= ticket.id %></h3>
      <p class="text-thomas-light text-sm"><%= ticket.site&.name %> â€¢ <%= ticket.scheduled_at.strftime('%b %d %I:%M%p') %></p>
    </div>
    <span class="px-3 py-1 rounded-full text-xs font-bold bg-white/20 <%= ticket.status == 'scheduled' ? 'text-yellow-200' : 'text-green-200' %>">
      <%= ticket.status.titleize %>
    </span>
  </div>
  
  <% if claimable %>
    <%= button_to "Claim Ticket", tech_claim_ticket_path(ticket.id), 
        class: "w-full bg-white/30 hover:bg-white/50 border-2 border-white/40 backdrop-blur-xl rounded-2xl px-6 py-3 font-semibold transition-all duration-300 hover:scale-105",
        data: { confirm: 'Claim this ticket?' } %>
  <% elsif ticket.status == 'claimed' %>
    <%= button_to "Complete", tech_complete_ticket_path(ticket.id), 
        class: "w-full bg-green-400/80 hover:bg-green-500 text-black font-bold rounded-2xl px-6 py-3 transition-all duration-300 hover:scale-105 shadow-lg" %>
  <% end %>
</div>
