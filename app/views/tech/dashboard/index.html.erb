        <div class="text-4xl font-black text-yellow-300"><%= @stats[:assigned] %></div>
        <div class="text-[#C0BEC6] text-lg mt-2">My Tickets</div>
      </div>
      <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 text-center border border-white/20">
        <div class="text-4xl font-black text-green-300"><%= @stats[:completed] %></div>
        <div class="text-[#C0BEC6] text-lg mt-2">Completed</div>
      </div>
      <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 text-center border border-white/20">
        <div class="text-4xl font-black"><%= @stats[:open] %></div>
        <div class="text-[#C0BEC6] text-lg mt-2">Available</div>
      </div>
    </div>

    <section class="mb-12">
      <h2 class="text-3xl font-black mb-8 flex items-center gap-4">ðŸ“± Available Jobs</h2>
      <% @open_tickets.each do |ticket| %>
        <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 mb-6 border-2 border-white/30 hover:border-[#C0BEC6] hover:scale-[1.02] transition-all duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="flex-1">
              <h3 class="font-black text-2xl mb-2">#<%= ticket.id %> Cisco Switch</h3>
              <p class="text-[#C0BEC6] mb-3">Site 21 â€¢ <%= ticket.scheduled_at.strftime('%b %d, %I:%M %p') %></p>
