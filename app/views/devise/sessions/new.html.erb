<!-- app/views/devise/sessions/new.html.erb - FULL PRO THOMAS IT LOGIN -->
<!DOCTYPE html>
<html class="h-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thomas IT Network Swap - Tech Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'sans-serif'] },
          animation: { 'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite' }
        }
      }
    }
  </script>
  <style>
    .glass-effect { 
      background: rgba(255, 255, 255, 0.08); 
      backdrop-filter: blur(20px); 
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    .glow-blue { box-shadow: 0 0 30px rgba(59, 130, 246, 0.4); }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4 font-inter antialiased">
  
  <!-- Main Login Container -->
  <div class="max-w-md w-full mx-auto">
    
    <!-- Logo Header -->
    <div class="text-center mb-12">
      <!-- Animated Logo -->
      <div class="mx-auto w-28 h-28 bg-gradient-to-br from-blue-600 via-blue-500 to-indigo-600 rounded-3xl flex items-center justify-center shadow-2xl glow-blue animate-pulse-slow mb-8 border-4 border-white/20">
        <svg class="w-14 h-14 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
      </div>
      
      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-black bg-gradient-to-r from-white to-slate-200 bg-clip-text text-transparent mb-3 tracking-tight">
        Network Swap
      </h1>
      <p class="text-xl text-slate-300 font-medium">Thomas IT ‚Ä¢ Field Tech Portal</p>
      <p class="text-slate-400 text-sm mt-1">Phoenix DC21 ‚Ä¢ Phase 13 Production</p>
    </div>

    <!-- Login Form Card -->
    <div class="glass-effect rounded-3xl p-10 shadow-2xl glow-blue transform hover:-translate-y-1 transition-all duration-300">
      <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { 
          class: "space-y-8", novalidate: true, data: { turbo: false } 
        } do |f| %>
        
        <!-- Email Field -->
        <div class="space-y-3">
          <label class="block text-lg font-semibold text-white tracking-tight">Tech Email</label>
          <%= f.email_field :email, 
              required: true, autofocus: true, autocomplete: "email",
              class: "w-full h-16 px-6 text-lg bg-white/10 border-2 border-white/20 rounded-2xl text-white placeholder-slate-400 
                     focus:outline-none focus:ring-4 focus:ring-blue-500/40 focus:border-blue-400 transition-all duration-300",
              placeholder: "smith.j@thomasit.com" %>
        </div>

        <!-- Password Field -->
        <div class="space-y-3">
          <label class="block text-lg font-semibold text-white tracking-tight">Field Password</label>
          <%= f.password_field :password, 
              required: true, autocomplete: "current-password",
              class: "w-full h-16 px-6 text-lg bg-white/10 border-2 border-white/20 rounded-2xl text-white placeholder-slate-400 
                     focus:outline-none focus:ring-4 focus:ring-blue-500/40 focus:border-blue-400 transition-all duration-300",
              placeholder: "Enter your password" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? -%>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-5 h-5 text-blue-400 border-2 border-white/30 rounded focus:ring-blue-500 bg-white/10 focus:ring-2" %>
            <label class="ml-3 block text-sm text-slate-300 font-medium"><%= f.label :remember_me, "Keep me signed in" %></label>
          </div>
        <% end -%>

        <!-- Submit Button -->
        <button type="submit" 
                class="w-full h-16 bg-gradient-to-r from-blue-600 via-blue-500 to-indigo-600 hover:from-blue-700 hover:via-blue-600 hover:to-indigo-700 
                       text-white text-xl font-black rounded-3xl shadow-2xl hover:shadow-3xl hover:-translate-y-1 transform transition-all duration-300 
                       border-2 border-transparent hover:border-white/30 uppercase tracking-wider">
          üîê Access Network Swap Dashboard
        </button>

      <% end %>
    </div>

    <!-- Status Bar -->
    <div class="mt-12 pt-8 border-t-2 border-white/10 text-center">
      <div class="flex items-center justify-center space-x-6 text-sm text-slate-400 mb-4">
        <span>üü¢ Puma LIVE</span>
        <span>üü¢ PostgreSQL LIVE</span>
        <span>üîµ Redis READY</span>
      </div>
      <p class="text-slate-500 text-xs">Thomas Information Technology ¬© 2026 ‚Ä¢ Phoenix, Arizona</p>
    </div>
  </div>

  <!-- Floating Status Badge -->
  <div class="fixed bottom-6 right-6 w-64 bg-emerald-500/90 backdrop-blur-xl border border-emerald-400/50 rounded-2xl p-4 shadow-2xl text-white text-sm font-semibold">
    <div class="flex items-center space-x-3">
      <div class="w-3 h-3 bg-emerald-400 rounded-full animate-pulse"></div>
      <span>Phase 13 Production</span>
      <span class="ml-auto text-xs opacity-75">(247/350 swaps)</span>
    </div>
  </div>

</body>
</html>
