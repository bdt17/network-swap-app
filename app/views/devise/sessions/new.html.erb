<div class="min-h-screen bg-gradient-to-br from-[#0984C0] to-[#60BDD1] flex items-center justify-center p-8">
  <div class="bg-white/95 backdrop-blur-xl rounded-3xl p-12 border border-[#AAA7B0]/50 shadow-2xl max-w-md w-full">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-black text-[#0984C0] mb-4">üîê Thomas IT Login</h1>
      <p class="text-[#565759]">Network Swap Dashboard</p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
      <div>
        <%= f.label :email, "Email", class: 'block text-[#565759] font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', 
            class: 'w-full p-4 border border-[#AAA7B0] rounded-xl focus:ring-4 focus:ring-[#60BDD1] focus:border-transparent' %>
      </div>
      
      <div>
        <%= f.label :password, "Password", class: 'block text-[#565759] font-semibold mb-2' %>
        <%= f.password_field :password, autocomplete: 'current-password', 
            class: 'w-full p-4 border border-[#AAA7B0] rounded-xl focus:ring-4 focus:ring-[#60BDD1] focus:border-transparent' %>
      </div>
      
      <div class="flex items-center justify-between">
        <%= f.submit "Sign In", class: 'btn-primary text-lg px-8 py-4 w-full font-bold' %>
      </div>
    <% end %>
    
    <div class="mt-8 p-4 bg-[#C0BEC6]/20 rounded-xl text-center">
      <div class="font-mono text-sm text-[#565759]">
        tech@thomasit.com / Smith2001!
      </div>
    </div>
  </div>
</div>
