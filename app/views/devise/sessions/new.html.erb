<div class="min-h-screen bg-[#FFFFFF] flex items-center justify-center p-6">
  <div class="max-w-md w-full bg-[#FFFFFF] rounded-xl shadow-xl p-8 border border-[#C0BEC6]">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold bg-gradient-to-r from-[#0984C0] to-[#60BDD1] bg-clip-text text-transparent mb-2">
        Thomas IT Analytics
      </h1>
      <p class="text-[#565759] font-medium">Network Swap Portal</p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full px-4 py-3 border border-[#AAA7B0] rounded-lg focus:ring-3 focus:ring-[#60BDD1]/30 focus:border-[#60BDD1]", 
            placeholder: "tech@thomasit.com" %>
      </div>
      <div class="relative">
        <%= f.password_field :password, autocomplete: "current-password", 
            class: "w-full px-4 py-3 border border-[#AAA7B0] rounded-lg focus:ring-3 focus:ring-[#60BDD1]/30 focus:border-[#60BDD1]", 
            placeholder: "password" %>
      </div>
      <div class="flex items-center justify-between text-xs text-[#565759]">
        <label class="flex items-center">
          <input type="checkbox" class="rounded"> Remember me
        </label>
        <a href="#" class="text-[#60BDD1] hover:underline">Forgot password?</a>
      </div>
      <%= f.submit "Sign In", class: "w-full bg-[#0984C0] hover:bg-[#60BDD1] text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>
    <% end %>
    
    <div class="mt-8 pt-6 border-t border-[#C0BEC6] text-center">
      <p class="text-[#565759] text-sm mb-4">Skip login for demo:</p>
      <a href="/tech" class="inline-flex items-center gap-2 text-[#60BDD1] hover:text-[#0984C0] hover:underline font-medium bg-[#FFFFFF] border border-[#C0BEC6] px-6 py-2 rounded-lg hover:bg-[#F8F9FA] transition-all">
        â†’ Tech Dashboard (Live)
      </a>
    </div>
  </div>
</div>
