<div class="p-8 max-w-7xl mx-auto">
  <h1 class="text-4xl font-black text-white mb-12">Network Inventory</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @sites.each do |site| %>
      <div class="p-6 bg-gradient-to-br from-slate-800/50 to-slate-900/50 border border-slate-700 rounded-2xl backdrop-blur-xl">
        <h3 class="text-xl font-bold text-emerald-400"><%= site.name %></h3>
        <p class="text-slate-400"><%= site.devices.count %> devices</p>
      </div>
    <% end %>
  </div>
</div>
